@model EmpleadosApp.Models.Empleado
@{
    ViewData["Title"] = "Nuevo Empleado";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
  <h1 class="mb-4">Crear Empleado</h1>
  <form asp-action="Create" class="row g-3">
    <div class="col-md-6">
      <label asp-for="Nombre" class="form-label"></label>
      <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="col-md-6">
      <label asp-for="FechaIngreso" class="form-label"></label>
      <input asp-for="FechaIngreso" type="date" class="form-control" />
    </div>
    <div class="col-md-6">
      <label asp-for="Latitud" class="form-label"></label>
      <input asp-for="Latitud" class="form-control" />
    </div>
    <div class="col-md-6">
      <label asp-for="Longitud" class="form-label"></label>
      <input asp-for="Longitud" class="form-control" />
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-success">Guardar</button>
      <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
  </form>
</div>
