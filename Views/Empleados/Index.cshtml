@model IEnumerable<EmpleadosApp.Models.Empleado>
@{
    ViewData["Title"] = "Empleados";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
  <h1 class="mb-4">Listado de Empleados</h1>

  @* Solo los Administrators ven este bot√≥n *@
  @if (User.IsInRole("Administrator"))
  {
    <a class="btn btn-primary mb-3" asp-action="Create">Nuevo Empleado</a>
  }

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Ingreso</th>
        <th>Latitud</th>
        <th>Longitud</th>
      </tr>
    </thead>
    <tbody>
      @foreach(var e in Model) {
        <tr>
          <td>@e.EmpleadoID</td>
          <td>@e.Nombre</td>
          <td>@e.FechaIngreso.ToString("yyyy-MM-dd")</td>
          <td>@e.Latitud</td>
          <td>@e.Longitud</td>
        </tr>
      }
    </tbody>
  </table>
</div>
