@model string
@{
    Layout = null; // Para que no herede el layout general en el login
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-image: url('/images/login-backgroundSIG.png'); /* Asegúrate de tener esta imagen en wwwroot/images */
      background-size: cover;
      background-position: center;
      height: 110vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .login-box {
      background-color: rgba(255, 255, 255, 0.95);
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
      max-width: 400px;
      width: 100%;
    }
  </style>
</head>
<body>
  <div class="login-box">
    <h2 class="mb-4 text-center">Iniciar sesión</h2>
    <form method="post" asp-action="Login">
      <input type="hidden" name="returnUrl" value="@Model" />
      <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input name="username" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input name="password" type="password" class="form-control" required />
      </div>
      <button class="btn btn-primary w-100">Entrar</button>
      @if (!ViewData.ModelState.IsValid)
      {
        <div class="text-danger mt-2">@ViewData.ModelState.Values.SelectMany(v=>v.Errors).FirstOrDefault()?.ErrorMessage</div>
      }
    </form>
  </div>
</body>
</html>
